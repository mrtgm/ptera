{
  "name": "backend",
  "type": "module",
  "scripts": {
    "studio": "bunx drizzle-kit studio",
    "dev": "bun --watch ./src/core/local.ts",
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/index.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name hello",
    "deploy": "run-s build zip update",
    "db:migrate": "./src/shared/infrastructure/db/migrate.sh",
    "db:clear": "bun run ./src/shared/infrastructure/db/clear.ts",
    "db:seed": "bun run ./src/shared/infrastructure/db/seed.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.2.4",
    "@types/pg": "^8.11.11",
    "esbuild": "^0.21.4",
    "npm-run-all2": "^6.2.0"
  },
  "dependencies": {
    "@dotenv-run/core": "^1.3.6",
    "@esbuild/linux-arm64": "^0.25.0",
    "@hono/node-server": "^1.13.8",
    "@hono/sentry": "^1.2.0",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.2",
    "@hono/zod-validator": "^0.4.3",
    "@logtail/node": "^0.5.2",
    "@scalar/hono-api-reference": "^0.5.180",
    "@t3-oss/env-core": "^0.12.0",
    "aws-jwt-verify": "^5.0.0",
    "drizzle-kit": "^0.30.5",
    "drizzle-orm": "^0.40.0",
    "drizzle-zod": "^0.7.0",
    "hono": "^4.7.2",
    "hono-compress": "^0.7.0",
    "nanoid": "^5.1.2",
    "pg": "^8.13.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "remeda": "^2.21.0",
    "tsx": "^4.19.3",
    "zod": "^3.24.2"
  }
}
